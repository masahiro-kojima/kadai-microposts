<!--フォロー／フォロワーの表示でもユーザの一覧表示-->
<% if users.any? %>
  <ul class="list-unstyled">
      <!--usersテーブルから繰り返し取り出す-->
    <% users.each do |user| %>
      <li class="media">
          <!--gravatar_url メソッドは、まだ定義していないメソッド-->
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
              <!--名前を表示-->
            <%= user.name %>
          </div>
          <div>
              <!--リンクを表示-->
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <!--ページネーションを表示する-->
  <%= paginate users %>
<% end %>